    text-opacity: 50%;
}

#export-btn {
    width: 100%;
    margin-top: 1;
}

RadioSet {
    width: 100%;
    height: auto;
}

RadioSet:focus {
    border: none;
}

/* Remove focus/background highlight from export RadioButtons */
#export-controls RadioSet {
    border: none;
    padding: 0;
}

#export-controls RadioSet:focus {
    border: none;
    padding: 0;
}

#export-controls RadioButton {
    background: transparent;
    border: none;
    padding: 0;
    margin: 0;
    height: 1;
    min-height: 1;
}

#export-controls RadioButton:focus {
    background: transparent;
    border: none;
    padding: 0;
}

#export-controls RadioButton:hover {
    background: transparent;
}

/* Clear selected/highlighted row states that can render as a square block */
#export-controls RadioButton.-selected,
#export-controls RadioButton.-highlight,
#export-controls RadioButton.-active {
    background: transparent;
}

/* Only style the toggle circle */
#export-controls RadioSet RadioButton .toggle--button {
    color: $surface-lighten-2;
    background: transparent;
}

#export-controls RadioSet RadioButton.-on .toggle--button {
    color: $accent;
    background: transparent;
}

#export-controls RadioSet:focus RadioButton.-on .toggle--button {
    color: $accent;
    background: transparent;
}

/* Remove any focus ring/border on RadioButton */
#export-controls RadioButton:focus > .toggle--button {
    text-style: none;
}

/* Inactive label: muted color to match inactive toggle circle */
#export-controls RadioButton .toggle--label {
    background: transparent;
    text-style: none;
    color: $text-muted;
}

/* Active label: accent color to match active toggle circle */
#export-controls RadioButton.-on .toggle--label {
    background: transparent;
    text-style: none;
    color: $text;
}

/* Ensure focus/selected/highlight states don't add extra styling */
#export-controls RadioButton:focus .toggle--label,
#export-controls RadioButton.-selected .toggle--label,
#export-controls RadioButton.-highlight .toggle--label,
#export-controls RadioButton.-active .toggle--label {
    background: transparent;
    text-style: none;
}

RadioButton:disabled {
    color: $text-disabled;
    text-opacity: 50%;
}

RadioButton:disabled .toggle--label {
    color: $text-disabled;
    text-opacity: 50%;
}

RadioButton:disabled .toggle--button {
    color: $text-disabled;
    text-opacity: 50%;
}

#output-dir-input {
    width: 100%;
    margin-top: 1;
}

#export-status-label {
